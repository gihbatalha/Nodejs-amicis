<!DOCTYPE html>
<html ng-app="app">
  <head>
    <title> Amicis </title>
    <link rel="icon" type="image/png" href="/images/favicon.png">

    <!--Import Google Icon Font-->
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="/stylesheets/materialize.css"  media="screen,projection"/>

    <!-- Import our css -->
    <link type="text/css" rel='stylesheet' href='/stylesheets/style.css'/>

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <!--Import jQuery before materialize.js-->
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>

    <!-- Adicionar arquivo do Angularjs -->
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.3.0/angular-ui-router.js"></script> 
    
    <!-- Compiled and minified JavaScript -->
    <script src="/javascripts/main.js"></script>
    <script src="/javascripts/materialize.min.js"></script>

    <script src="/javascripts/app.js"></script>
    <script src="/javascripts/main.js"></script>
    <script src="/javascripts/appMaterialize.js"></script>
        
  </head>

  <body ng-controller="loginController" ng-init="init()">
    <div class="row">
      <nav>
        <div class="nav-wrapper">
          <a href="#!" class="brand-logo">Amicis</a>
          <ul class="right hide-on-med-and-down">
            <!-- itens que aparecem se o usuário estiver logado -->
            <li>
              <a ng-show="login" class="menu-itens" ng-click="sair()"> Sair </a>
              <span ng-show="login"> {{userLogged.nome}} </span>
            </li>
            <li><a ng-show="login" class="menu-itens" ui-sref="newRecipe"> Enviar nova receita </a></li>
            
            <!-- itens que aparecem se o usuário NÃO estiver logado -->
            <li><a ng-hide="login" class="menu-itens" ui-sref="login">  Entrar   </a></li>
            <li><a ng-hide="login" class="modal-trigger" ui-sref="newUser">  Cadastre-se   </a></li>

            <li><a class="modal-trigger" ui-sref="newComment">  Enviar comentário </a></li>

            <!-- <li><a class="modal-trigger" ui-sref="newTag">  Adicionar Tag </a></li> -->
            <!-- <li><a class="modal-trigger" ui-sref="newCategory">  Adicionar Categoria </a></li> -->

            <li><a  ui-sref="viewTags">  ver Tags </a></li>
            <!-- <li><a  ui-sref="viewRecipesByParam({param : 'viewRecipes'})">  ver Receitas </a></li>  ARRUMAR ARRUMAR ARRUMAR ARRUMAR ARRUMAR-->
            <li><a  ui-sref="viewCategories">  ver Categorias </a></li>

            <li><a  ui-sref="viewRecipesByParam({param : 'categorias', valueParam: 'Caldos'})">  Caldos </a>
            <li><a  ui-sref="viewRecipesByParam({param : 'tags', valueParam: 'Lalalala'})">  Lalalala </a></li>

          </ul>
        </div>
      </nav>
    </div>

    <div ui-view>
        <!--onde será colocada as views -->
    </div>


    <!-- Controllers -->
    <script src="/app/auth/controllers/loginController.js"></script>  
    <script src="/app/recipes/controllers/recipeController.js"></script>  
    <script src="/app/comments/controllers/commentController.js"></script> 
    <script src="/app/tags/controllers/tagController.js"></script>
    <script src="/app/categories/controllers/categoryController.js"></script>
    <script src="/app/tags/controllers/tagManagerController.js"></script>  
    <script src="/app/recipes/controllers/recipeManagerController.js"></script>  

  </body>
</html>
