<!DOCTYPE html>
<html ng-app="app">
  <head>
    <title><%= title %></title>

    <!--Import Google Icon Font-->
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="/stylesheets/materialize.css"  media="screen,projection"/>

    <!-- Import our css -->
    <link rel='stylesheet' href='/stylesheets/style.css' />

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        
  </head>

  <body ng-controller="loginController" ng-init="init()">

  <div class="row">
      <div class="col s12 ">
            <div class="card-panel menu-principal">          

                <!-- itens que aparecem se o usuário estiver logado -->
                <a ng-show="login" class="menu-itens" ng-click="sair()"> Sair </a>
                <span ng-show="login"> {{userLogged.nome}} </span>
                <a class="menu-itens" ui-sref="newRecipe"> Enviar nova receita </a>

                <!-- itens que aparecem se o usuário NÃO estiver logado -->
                <a ng-hide="login" class="menu-itens" ui-sref="login">  Entrar   </a>
                <a ng-hide="login" class="menu-itens" ui-sref="newUser">  Cadastre-se   </a>

                <!-- itens que não importa se está logado ou não -->

            </div>
      </div>
    </div>

    <div ui-view>
        <!--onde será colocada as views -->
    </div>

    <!--Import jQuery before materialize.js-->
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script type="text/javascript" src="js/materialize.min.js"></script>

    <!-- Adicionar arquivo do Angularjs -->
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.3.0/angular-ui-router.js"></script> 

    <!-- Controllers -->
    <script src="/javascripts/appMaterialize.js"></script>
    <script src="/javascripts/app.js"></script>
    <script src="/javascripts/main.js"></script>

    <script src="/app/auth/controllers/loginController.js"></script>  
    <script src="/app/recipes/controllers/recipeController.js"></script>  
    <script src="/app/controllers/route1.controller.js"></script>

  </body>
</html>
