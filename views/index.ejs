<!DOCTYPE html>
<html ng-app="app">
  <head>
    <title><%= title %></title>
    <link rel="icon" type="image/png" href="/images/favicon.png">

    <!--Import Google Icon Font-->
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="/stylesheets/materialize.css"  media="screen,projection"/>

    <!-- Import our css -->
    <link type="text/css" rel='stylesheet' href='/stylesheets/style.css'/>

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        
  </head>

  <body ng-controller="loginController" ng-init="init()">
    <div class="carousel carousel-slider center" data-indicators="true">
    <div class="carousel-fixed-item center">
      <a class="btn waves-effect white grey-text darken-text-2">button</a>
    </div>
    <div class="carousel-item red white-text" href="#one!">
      <h2>First Panel</h2>
      <p class="white-text">This is your first panel</p>
    </div>
    <div class="carousel-item amber white-text" href="#two!">
      <h2>Second Panel</h2>
      <p class="white-text">This is your second panel</p>
    </div>
    <div class="carousel-item green white-text" href="#three!">
      <h2>Third Panel</h2>
      <p class="white-text">This is your third panel</p>
    </div>
    <div class="carousel-item blue white-text" href="#four!">
      <h2>Fourth Panel</h2>
      <p class="white-text">This is your fourth panel</p>
    </div>
  </div>

  <div class="row">
          <nav class="menu">
            <div class="nav-wrapper">
              <a href="#!" class="brand-logo">Amicis</a>
              <ul class="right hide-on-med-and-down">
                <!-- itens que aparecem se o usuário estiver logado -->
                <li>
                  <a ng-show="login" class="menu-itens" ng-click="sair()"> Sair </a>
                  <span ng-show="login"> {{userLogged.nome}} </span>
                </li>
                <li><a class="menu-itens" ui-sref="newRecipe"> Enviar nova receita </a></li>
                <!-- itens que aparecem se o usuário NÃO estiver logado -->
                <li><a ng-hide="login" class="menu-itens" ui-sref="login">  Entrar   </a></li>
                <li><a ng-hide="login" ui-sref="newUser">  Cadastre-se   </a></li>
                <li><a ui-sref="newComment">  Enviar comentário </a></li>

              </ul>
            </div>
          </nav>
    </div>

    <div ui-view>
        <!--onde será colocada as views -->
    </div>
    
    <!--Import jQuery before materialize.js-->
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>

    <!-- Adicionar arquivo do Angularjs -->
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.3.0/angular-ui-router.js"></script> 
    
    <!-- Compiled and minified JavaScript -->
    <script src="/javascripts/main.js"></script>
    <script src="/javascripts/materialize.min.js"></script>

    <script src="/javascripts/app.js"></script>
    <script src="/javascripts/main.js"></script>
    <script src="/javascripts/appMaterialize.js"></script>

    <!-- Controllers -->
    <script src="/app/auth/controllers/loginController.js"></script>  
    <script src="/app/recipes/controllers/recipeController.js"></script>  
    <script src="/app/comments/controllers/commentController.js"></script> 

  </body>
</html>
